extends _layout.jade
block main
	section.product
		.container
			.breadcrumbs
				ul.breadcrumbs__list
					li.breadcrumbs__item
						a.breadcrumbs__link(href="#") Главная
					li.breadcrumbs__item
						a.breadcrumbs__link(href="#") Каталог
					li.breadcrumbs__item
						a.breadcrumbs__link.breadcrumbs__link_active(href="#") Платье макси с бисером, пряжкой на талии
			.product__wrap
				.product__gallery
					.product__gallery_img-wrapper
						.product-status.new
						.product__big-photo-wrap
							.product__gallery_img
								img.img(src='./img/product/img1.jpg')
							.product__gallery_img
								img.img(src='./img/product/img2.jpg')
							.product__gallery_img
								img.img(src='./img/product/img1.jpg')
					.product__gallery-nav-bar
						.product__gallery_preview
							img.img(src='./img/product/img-prev1.jpg')
						.product__gallery_preview
							img.img(src='./img/product/img2.jpg')
						.product__gallery_preview
							img.img(src='./img/product/img-prev2.jpg')

				.product__content
					.product__title
						|Платье макси с бисером, пряжкой на талии
					.product__price-logo
						.price-block
							.price__wrap
								span.price__value 2 890
								span.price__text руб.
							.articul
								span.articul__text Артикул:
								span.articul__value 140-01-21
							.availab
								span.availab__text В наличии:
								span.availab__value Есть
						.logo-block
							.product-logo__wrap
								a(href="#").product-logo__link
									img(src="img/product-logo.png", alt="product-logo")
					.product__color-size
						.color-block
							.color-block__text
								span.content-text Цвет:
								span.color-value Оранжевый с Красным
							.color-block__blocks
								ul.color-block__list
